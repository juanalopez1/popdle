{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "extends": "fastify-tsconfig",
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "NodeNext",
        "noUnusedLocals": false,
        "module": "NodeNext",
        "target": "ES2022",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
